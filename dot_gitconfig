[init]
    defaultBranch = main

[alias]
    cm = commit -m
    st = status -sb
    ll = log --graph --oneline --decorate
    last = log -1 HEAD --stat
    cc = checkout
    cb = checkout -b
    bl = branch --list
    bd = branch --delete

# Github config files
[includeIf "gitdir:~/local/github.com/"]
    path = ~/.gitconfig-github
[includeIf "gitdir:~/go/src/github.com/"]
    path = ~/.gitconfig-github
[includeIf "gitdir:~/py/src/github.com/"]
    path = ~/.gitconfig-github
[includeIf "gitdir:~/cpp/src/github.com/"]
    path = ~/.gitconfig-github
[includeIf "gitdir:~/julia/src/github.com/"]
    path = ~/.gitconfig-github

