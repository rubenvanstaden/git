[init]
    defaultBranch = main

[alias]
    cm = commit -m
    st = status -sb
    ll = log --graph --oneline --decorate
    last = log -1 HEAD --stat
    cc = checkout
    cb = checkout -b
    bl = branch --list
    bd = branch --delete
