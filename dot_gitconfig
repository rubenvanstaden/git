[user]
	email = rubenvanstaden@gmail.com
	name = Ruben van Staden

[init]
    defaultbranch = main

[color]
	ui = true

[core]
	editor = nvim

[alias]
    cm = commit -m
    ca = commit --amend
    st = status -sb
    ll = log --graph --oneline --decorate
    last = log -1 head --stat
    cc = checkout
    cb = checkout -b
    bl = branch --list
    bd = branch --delete
    rs = restore --staged *
	df = diff
	ds = diff --staged

	alias = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'

[includeif "gitdir:~/github.com/"]
    path = ~/.gitconfig-github

[includeif "gitdir:~/anyonsys.com/"]
    path = ~/.gitconfig-anyon
